<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode WITHOUT ActionBar -->
    <style name="Base.Theme.BookQuoteCollector" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Your existing color definitions for dark mode -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_primary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Key attributes for NoActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- The standard app theme for night mode -->
    <style name="Theme.BookQuoteCollector" parent="Base.Theme.BookQuoteCollector" />

    <!-- NEW: Define the ActionBar theme for night mode, inheriting dark colors -->
    <style name="Theme.BookQuoteCollector.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Inherit primary colors from the base dark theme -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_primary_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- ActionBar is enabled by DarkActionBar parent -->
    </style>
</resources>